@model IEnumerable<DanhMuc>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>All departments</span>
        </div>
        <ul>
            @foreach(var item in Model)
            {
                <li><a asp-controller="Home" asp-action="SanPhamTheoLoai" asp-route-madanhmuc="@item.MaDanhMuc">@item.TenDanhMuc</a></li>
            }
            
        </ul>
        <style>
            a:hover {
                color: red;
            }
        </style>
    </div>
</div>