@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/layout.cshtml";
}
@model List<ThucPham.Models.CartItemViewModel>

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@Url.Content("../imageProduct/" + item.Anh)" alt="" style="width: 50px; height: 50px;">
                                        <h5>@item.TenSp</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @String.Format("{0:C}", item.Gia)
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" class="SoLg" value="@item.SoLuong">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total cart-total" id="tongtien1sanpham">
                                        @String.Format("{0:C}", item.TongTien)
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action = "Index" class="cart-btn">CONTINUE SHOPPING</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        
                        Upadate Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Subtotal <span>$0</span></li>
                        <li>Total <span id"TongTienToanSanPham">$0</span></li>
                    </ul>
                    <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>

</section>


<script src="../layout/js/test.js"></script>
